import requests
import time

API_URL = "https://zenquotes.io/api/random"
MAX_RETRIES = 5  # Number of times to retry before giving up

def fetch_quote():
    for attempt in range(MAX_RETRIES):
        try:
            response = requests.get(API_URL, timeout=5)
            if response.status_code == 200:
                data = response.json()
                if data and isinstance(data, list):
                    quote = data[0].get("q", "No quote found.")
                    author = data[0].get("a", "Unknown")
                    return f'"{quote}" - {author}'
            print(f"Attempt {attempt+1}: Failed to retrieve quote.")
        except requests.RequestException as e:
            print(f"Attempt {attempt+1}: Error fetching quote: {e}")

        time.sleep(2)  # Wait before retrying

    return "Failed to retrieve quote after multiple attempts."

